{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project descriptor",
  "type": "object",
  "required": ["name"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "sub_projects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "path"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "path": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "build": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/task"
      }
    },
    "clear": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/task"
      }
    },
    "setup": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/task"
      }
    },
    "package": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/task"
      }
    }
  },
  "definitions": {
    "task": {
      "type": "object",
      "required": ["label"],
      "additionalProperties": false,
      "properties": {
        "label": {
          "type": "string",
          "minLength": 1
        },
        "command": {
          "type": "string",
          "minLength": 1
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "depends": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
